<UserControl x:Class="CryptoCurrency.Pages.ConvertItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoCurrency.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="40">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image x:Name="Image" Width="25"/>
            <Label x:Name="CoinName" Content="Bitcoin" VerticalAlignment="Center" Margin="10 0 0 0" Foreground="{DynamicResource Text}"/>
        </StackPanel>
    </Grid>
</UserControl>
